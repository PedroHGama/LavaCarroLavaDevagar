@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn my-2 my-sm-0">Logout</button>
            </form>
        </li>
}
else
    {
        <li class="nav-item">
            <form class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                <button type="submit" class="btn btn-secondary my-2 my-sm-0">Registre-se</button>
            </form>
            @*  <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Registre-se</a> *@
        </li>
        <li class="nav-item">

            <form class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                <button type="submit" class="btn btn-secondary my-2 my-sm-0">Login</button>
            </form>

            @* <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a> *@
        </li>
}
</ul>
