@model WashCarLavaDevagar.Models.Lavagem

@{
    ViewData["Title"] = "Editar Cadastro";
}

<h1>Editar Cadastro</h1>

<h4>Lavagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IDLavagem" />
            <div class="form-group">
                <label asp-for="TipoLavagemID" class="control-label"></label>
                <select asp-for="TipoLavagemID" class="form-control" asp-items="ViewBag.TipoLavagemID"></select>
                <span asp-validation-for="TipoLavagemID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLavagem" class="control-label"></label>
                <input asp-for="DataLavagem" class="form-control" />
                <span asp-validation-for="DataLavagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorLavagem" class="control-label"></label>
                <input asp-for="ValorLavagem" class="form-control" />
                <span asp-validation-for="ValorLavagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescontoLavagem" class="control-label"></label>
                <input asp-for="DescontoLavagem" class="form-control" />
                <span asp-validation-for="DescontoLavagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarroID" class="control-label"></label>
                <select asp-for="CarroID" class="form-control" asp-items="ViewBag.CarroID"></select>
                <span asp-validation-for="CarroID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><img src="~/icones/icones/Voltar.png" width="20" height="20"></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
